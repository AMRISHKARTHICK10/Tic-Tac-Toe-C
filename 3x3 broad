#include <stdio.h>

char board[3][3];

// Function to initialize board
void initializeBoard() {
    char ch = '1';
    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < 3; j++) {
            board[i][j] = ch++;
        }
    }
}

// Function to display board
void displayBoard() {
    printf("\n");
    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < 3; j++) {
            printf(" %c ", board[i][j]);
            if(j < 2) printf("|");
        }
        printf("\n");
        if(i < 2) printf("----|----|----\n");
    }
    printf("\n");
}

// Function to check win
int checkWin() {
    for(int i = 0; i < 3; i++) {
        // Check rows
        if(board[i][0] == board[i][1] && board[i][1] == board[i][2])
            return 1;

        // Check columns
        if(board[0][i] == board[1][i] && board[1][i] == board[2][i])
            return 1;
    }

    // Check diagonals
    if(board[0][0] == board[1][1] && board[1][1] == board[2][2])
        return 1;

    if(board[0][2] == board[1][1] && board[1][1] == board[2][0])
        return 1;

    return 0;
}

int main() {
    int choice, player = 1;
    char mark;

    initializeBoard();

    while(1) {
        displayBoard();

        if(player % 2 == 1)
            mark = 'X';
        else
            mark = 'O';

        printf("Player %d (%c), enter position (1-9): ", player, mark);
        scanf("%d", &choice);

        int row = (choice - 1) / 3;
        int col = (choice - 1) % 3;

        if(choice < 1 || choice > 9 || 
           board[row][col] == 'X' || board[row][col] == 'O') {
            printf("Invalid move! Try again.\n");
            continue;
        }

        board[row][col] = mark;

        if(checkWin()) {
            displayBoard();
            printf("Player %d (%c) wins! ðŸŽ‰\n", player, mark);
            break;
        }

        if(player == 9) {
            displayBoard();
            printf("Game Draw!\n");
            break;
        }

        player++;
    }

    return 0;
}
